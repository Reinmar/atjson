{
  "name": "@atjson/editor",
  "version": "0.8.11",
  "description": "AtJSON Editor",
  "main": "dist/commonjs/index.js",
  "module": "dist/modules/index.js",
  "types": "dist/commonjs/index.d.ts",
  "scripts": {
    "build": "rm -rf dist; tsc -p . & tsc -p . --module ESNext --outDir dist/modules/ --target ES2017; exit 0",
    "lint": "tslint -c ./tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "start": "parcel public/index.html --no-hmr",
    "test": "../../../node_modules/.bin/jest packages/@atjson/$(basename $PWD) --config=../../../package.json"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "dependencies": {
    "@atjson/document": "0.8.6",
    "@atjson/hir": "0.8.9",
    "@atjson/offset-core-components": "0.8.0",
    "@atjson/renderer-commonmark": "0.9.0",
    "@atjson/renderer-webcomponent": "0.8.0",
    "@types/dom-inputevent": "^1.0.1",
    "node-sass": "^4.9.0"
  },
  "devDependencies": {
    "parcel-bundler": "1.10.0-beta.1",
    "ts-loader": "^4.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
