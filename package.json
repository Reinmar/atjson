{
  "private": true,
  "name": "atjson",
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "jest": "^22.2.1",
    "lerna": "^2.8.0",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "build": "lerna run build",
    "publish": "lerna publish",
    "test": "./node_modules/jest/bin/jest.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "@atjson/(.*)": "<rootDir>/packages/$1/src/index.ts"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*-test.(ts|tsx)"
    ]
  }
}
